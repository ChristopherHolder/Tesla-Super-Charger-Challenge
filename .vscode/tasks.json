{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build main",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-g",
                "-O1",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/main"                
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
  }